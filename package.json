{
  "name": "task-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf build dist",
    "prebuild-elm": "mkdir -p build dist",
    "build-elm": "elm-make --yes --warn src/elm/Main.elm --output build/elm.js",
    "prebuild-js": "npm run build-elm",
    "build-js": "cat build/elm.js src/js/run.js > build/index.js",
    "postbuild-js": "uglifyjs build/index.js > dist/index.js",
    "build-css": "postcss -c postcss.json src/css/index.css > dist/index.css",
    "build-html": "pug < src/index.pug > dist/index.html",
    "build-cache": "sw-precache --config=sw-precache.json",
    "postbuild-cache": "uglifyjs src/js/service-worker-registration.js > dist/service-worker-registration.js",
    "build": "parallelshell 'npm run build-js' 'npm run build-css' 'npm run build-html' && npm run build-cache",
    "watch-cache": "nodemon -w dist -i 'service-worker*' --exec 'npm run build-cache'",
    "watch-js": "nodemon -e elm,js -w src/js -w src/elm --exec 'npm run build-js'",
    "watch-css": "nodemon -e css -w src/css --exec 'npm run build-css'",
    "watch-html": "nodemon -e pug -w src --exec 'npm run build-html'",
    "watch": "parallelshell 'npm run watch-js' 'npm run watch-css' 'npm run watch-html' 'npm run watch-cache'",
    "serve": "browser-sync start --config=bs-config.js",
    "start": "parallelshell 'npm run watch' 'npm run serve'",
    "pregh-pages": "npm run build",
    "gh-pages": "git subtree push --prefix dist origin gh-pages"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.11.2",
    "connect-history-api-fallback": "^1.2.0",
    "cssnano": "^3.5.2",
    "elm": "^0.16.0",
    "mime": "^1.3.4",
    "nodemon": "^1.9.1",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.1",
    "postcss-cssnext": "^2.5.2",
    "postcss-url": "^5.1.1",
    "pug-cli": "^1.0.0-alpha1",
    "sw-precache": "^3.1.1",
    "uglifyjs": "^2.4.10"
  }
}
